<h1><%= @post.name%></h1>
<h4>Comments: <%= @post.comment %></h4>
<% if current_user %>
  <p><%= link_to "Edit this post", edit_post_path(@post), :class => "btn btn-info" %>
<%= link_to "Delete this post", post_path(@post),
                         :confirm => "You sure?",
                         :method => "delete",
                         :class => "btn btn-info" %></p>
<% end %>

<%= render("layouts/errors", :object => @post) %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :name, "Title" %></br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :comment, "Question" %></br>
    <%= f.text_area :comment %>
  </div>


  <%= f.submit(:class => "btn btn-primary") %>
<% end %>
